<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="StudentViewController">
    <children>


        <ImageView fx:id="studentImageView" fitHeight="139.0" fitWidth="200.0" layoutX="39.0" layoutY="55.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@Images/studentImage.jpg" />
            </image>
            <cursor>
                <Cursor fx:constant="DEFAULT" />
            </cursor>
        </ImageView>
        <VBox alignment="CENTER" layoutX="294.0" layoutY="21.0" prefHeight="200.0" prefWidth="98.0" spacing="30.0">
            <children>
                <Label fx:id="firstNameLabel" text="First Name:" textFill="#f20909">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <Label fx:id="lastNameLabel" text="Last Name:" textFill="#f20606">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <Label fx:id="studentNumLabel" text="Student Number:" textFill="#f20707">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </Label>
            </children>
            <opaqueInsets>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </opaqueInsets></VBox>
        <AnchorPane layoutY="219.0" prefHeight="191.0" prefWidth="614.0">
            <children>
                <Label fx:id="activitiesLabel" alignment="CENTER" layoutX="26.0" layoutY="25.0" prefHeight="37.0" prefWidth="155.0" text="Favourite Activities:" textFill="#f80606">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <padding>
                        <Insets left="10.0" />
                    </padding>
                </Label>
                <TextArea fx:id="favActTextArea" layoutX="291.0" layoutY="35.0" prefHeight="133.0" prefWidth="200.0" />
            </children>
        </AnchorPane>


    </children>
    <padding>
        <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
    </padding>
</AnchorPane>
